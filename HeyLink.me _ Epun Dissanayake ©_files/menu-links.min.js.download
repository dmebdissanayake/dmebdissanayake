$(document).ready(function(){$('.first-pic').click(function(){const menuItemID=$(this).data('id');toggleSlider(menuItemID);$('.menu-slider').not('.slick-initialized').slick({arrows:true,dots:false,infinite:true,speed:300,slidesToShow:1,adaptiveHeight:true,autoplay:true,autoplaySpeed:2000,}).on('setPosition');});function toggleSlider(itemID){$('.menu-slider-wrapper[data-id='+itemID+']').toggleClass('hidden');}
$('.close-menu-item-slider').click(function(){const menuItemID=$(this).data('id');$('.menu-slider-wrapper[data-id='+menuItemID+']').toggleClass('hidden');$('.menu-slider').slick('unslick');});const MENU_LINK=$('.menu-title-wrapper');const BTN_UP=$('.menu-up');$(MENU_LINK).click(function(){const menuLinkItemID=$(this).data('id');$('.menu-expanded-content[data-id="'+menuLinkItemID+'"]').toggleClass('hidden');$('.menu-up[data-id="'+menuLinkItemID+'"]').toggleClass('hidden');});$(BTN_UP).click(function(){const menuLinkItemID=$(this).data('id');$('.menu-expanded-content[data-id="'+menuLinkItemID+'"]').addClass('hidden');$('.menu-up[data-id="'+menuLinkItemID+'"]').addClass('hidden');});});